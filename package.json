{
  "name": "claycli",
  "version": "2.0.2",
  "description": "A command-line interface for Clay",
  "main": "index.js",
  "preferGlobal": true,
  "bin": {
    "clay": "cli/index.js"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 lib cli index.js",
    "test": "npm run lint && jest --coverage && cat ./coverage/lcov.info | coveralls",
    "watch": "jest --watch"
  },
  "jest": {
    "automock": false,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!lib/reporters/**",
      "!**/node_modules/**",
      "!**/cli/**",
      "!**/coverage/**",
      "!**/index.js"
    ],
    "setupFiles": [
      "./setup-jest.js"
    ]
  },
  "pre-push": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nymag/clay-cli.git"
  },
  "keywords": [
    "clay",
    "cli"
  ],
  "author": "New York Media",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nymag/clay-cli/issues"
  },
  "homepage": "https://github.com/nymag/clay-cli#readme",
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.17.0",
    "jest": "^22.4.1",
    "jest-fetch-mock": "^1.6.5"
  },
  "dependencies": {
    "base-64": "^0.1.0",
    "chalk": "^2.3.2",
    "clay-log": "^1.3.0",
    "clayutils": "^2.0.3",
    "get-stdin": "^5.0.1",
    "highland": "^3.0.0-beta.5",
    "home-config": "^0.1.0",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.5",
    "nyansole": "^0.5.1",
    "pluralize": "^7.0.0",
    "split-lines": "^1.1.0",
    "string-replace-async": "^1.2.1",
    "terminal-logger": "^0.2.3",
    "update-notifier": "^2.3.0",
    "yargs": "^11.0.0"
  }
}
